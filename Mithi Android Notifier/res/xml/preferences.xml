<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Server Configuration" >

        <!-- IP Address validation -->
        <com.mithi.androidnotifier.SettingsSummary
            android:defaultValue="127.0.0.1"
            android:dialogTitle="Mithi Server IP Address"
            android:digits="0123456789."
            android:inputType="number|numberDecimal"
            android:key="server_ip"
            android:summary="Enter Server&apos;s IP Address"
            android:title="Server IP" />

        <CheckBoxPreference
            android:key="receive_notifications"
            android:summaryOff="Disabled"
            android:summaryOn="Enabled"
            android:title="Push Notifications"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="About Notifier" >
        <Preference android:title="Visit mithi.com" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.mithi.com" />
        </Preference>
    </PreferenceCategory>

    <Preference
        android:defaultValue="false"
        android:key="isRegistered" >
    </Preference>

</PreferenceScreen>